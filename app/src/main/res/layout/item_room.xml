<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card:cardCornerRadius="12dp"
    card:cardElevation="4dp"
    android:layout_margin="8dp"
    card:strokeWidth="1dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Room Name -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 101"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true" />

        <!-- Rent -->
        <TextView
            android:id="@+id/tvRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="₹12,000"
            android:textStyle="bold"
            android:textSize="16sp"
           />

        <!-- Room type and capacity -->
        <TextView
            android:id="@+id/tvTypeCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRoomName"
            android:text="1BHK • Capacity: 4"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="4dp" />

        <!-- Occupancy information -->
        <TextView
            android:id="@+id/tvOccupiedAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTypeCapacity"
            android:text="Occupied: 1 • Available: 3"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="2dp" />

        <!-- Edit / Delete -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvRent"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_edit"
                android:contentDescription="Edit Room"
                card:tint="@color/black" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_delete"
                android:contentDescription="Delete Room"
                card:tint="@color/black" />

        </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
