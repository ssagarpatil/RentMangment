<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="6dp"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivTenantPhoto"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_person"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_person" />

        <TextView
            android:id="@+id/tvTenantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tenant Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_toEndOf="@id/ivTenantPhoto"
            android:layout_marginStart="12dp" />

        <TextView
            android:id="@+id/tvTenantRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room: A-101"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_toEndOf="@id/ivTenantPhoto"
            android:layout_below="@id/tvTenantName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvTenantPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9876543210"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
